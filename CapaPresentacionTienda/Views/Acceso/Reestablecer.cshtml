<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reestablecer</title>
    <link rel="stylesheet" href="~/Content/estilos/indexStyle.css">
    <link href="~/Content/sweetalert.css" rel="stylesheet" />

    <!--<link href="~/Content/Site.css" rel="stylesheet" />
    -->

</head>
<body>
    <div class="wrapper">
        <h2>Reestablecer</h2>
        <h3 class="subtexto">Ingrese su dirección de correo electrónico y le enviaremos su nueva contraseña.</h3>
        <form action="@Url.Action("Reestablecer","Acceso")" method="post">
            <div class="input-box">
                <input class="form-control" name="correo" type="email" placeholder="Email" />
                <label for="inputEmail">Email</label>
            </div>

            @{
                if (ViewBag.Error != null)
                {
                    <div class="input-box">
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    </div>
                }
            }

            <div class="input-box button">
                <input type="Submit" value="Reestablecer la contraseña">
            </div>
            <div class="text">
                <h3>Regresar al <a href="@Url.Action("Index","Acceso")">Login</a></h3>
            </div>
        </form>
    </div>
    <script src="~/Scripts/fontawesome/all.min.js"></script>
    <script src="~/Scripts/sweetalert.min.js"></script>

    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>

