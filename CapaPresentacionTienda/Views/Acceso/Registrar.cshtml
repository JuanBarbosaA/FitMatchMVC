


@model CapaEntidad.Cliente
<!DOCTYPE html>
<!-- Coding by CodingLab | www.codinglabweb.com-->
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar</title>
    <link rel="stylesheet" href="~/Content/estilos/indexStyle.css">
    <link href="~/Content/sweetalert.css" rel="stylesheet" />

    <!--<link href="~/Content/Site.css" rel="stylesheet" />
    -->

</head>
<body>
    <div class="wrapper">
        <h2>Crear una cuenta</h2>
        <form action="@Url.Action("Registrar","Acceso")" method="post">
            <div class="input-box">
                @Html.TextBoxFor(m => m.Nombres, new { @class = "form-control", @id = "txtnombre", @placeholder = "Nombres", value = ViewData["Nombres"] })
                @Html.Label("txtnombre", "Nombres")
            </div>
            <div class="input-box">
                @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control", @id = "txtapellidos", @placeholder = "Apellidos", value = ViewData["Apellidos"] })
                @Html.Label("txtapellidos", "Apellidos")
            </div>

            <div class="input-box">
                @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", @id = "txtcorreo", @placeholder = "Email", value = ViewData["Correo"] })
                @Html.Label("txtcorreo", "Correo")
            </div>
            <div class="input-box">
                @Html.PasswordFor(m => m.Clave, new { @class = "form-control", @id = "txtclave", @placeholder = "Contraseña" })
                @Html.Label("txtclave", "Contraseña")
            </div>
            <div class="input-box">
                @Html.PasswordFor(m => m.ConfirmarClave, new { @class = "form-control", @id = "txtconfirmarclave", @placeholder = "Confirmar Contraseña" })
                @Html.Label("txtconfirmarclave", "Confirmar Contraseña")
            </div>
            @{
                if (ViewBag.Error != null)
                {
                    <div class="input-box">
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    </div>
                }
            }





            <div class="input-box button">
                <input type="Submit" value="Crear Cuenta">
            </div>



            <div class="text">
                <h3>¿Ya tienes una cuenta? <a href="@Url.Action("Index","Acceso")">Iniciar Sesión</a></h3>
            </div>
        </form>
    </div>
    <script src="~/Scripts/fontawesome/all.min.js"></script>

    <script src="~/Scripts/sweetalert.min.js"></script>

    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>

